fieldset
    legend Add New Vendor
    form.form-horizontal(action="/add-vendor", method="post")
        .form-group
            label.control-label(for="username") User Name
            input.form-control(name="username")

        .form-group
            label.control-label(for="password") Password
            input.form-control(name="password", type="password")

        .form-group
            label.control-label(for="comp_name") Company Name
            input.form-control(name="comp_name")

        .form-group
            label.control-label(for="business_id") Business Registration Number
            input.form-control(name="business_id")

        .form-group
            label.control-label(for="bank_name") Bank Name
            input.form-control(name="bank_name")

        .form-group
            label.control-label(for="account_number") Account Number
            input.form-control(name="account_number")

        .form-group
            label.control-label(for="expiry_date") Business Expiry Date
            input.form-control(name="expiry_date")

        .form-group
            label.control-label(for="other") Other Information
            textarea.form-control(name="other", cols="2", rows="8")
        button.btn.btn-primary.pull-right(type="submit") Save

